<body>
  <div class="app">

    <!-- شاشة 1: إدخال الرقم التدريبي -->
    <section id="screenLogin" class="screen active">
      <h1 class="title">صفحة استعلام المتدرب</h1>
      <div class="card searchWrap">
        <div class="inputRow">
          <div class="label">الرقم التدريبي</div>
          <input id="traineeId" inputmode="numeric" autocomplete="off" placeholder="اكتب رقمك التدريبي" />
        </div>
        <button class="btn" id="btnSearch">بحث</button>
        <div class="hint">يمكنك لاحقًا ربط البحث بملف Google Sheet</div>
        <div class="error" id="errBox">لم يتم العثور على متدرب بهذا الرقم.</div>
      </div>
    </section>

    <!-- شاشة 2: قائمة الخدمات + بيانات المتدرب -->
    <section id="screenDashboard" class="screen">
      <div class="topBar">
        <h1 class="title" style="margin:0; font-size:28px;">الخدمات</h1>
        <button class="homeBtn" id="btnHome" title="رجوع">⌂</button>
      </div>

      <div class="card">
        <div class="infoBox">
          <div class="infoItem">
            <div class="k">اسم المتدرب</div>
            <div class="v" id="vName">-</div>
          </div>
          <div class="infoItem">
            <div class="k">الرقم التدريبي</div>
            <div class="v" id="vId">-</div>
          </div>
          <div class="infoItem">
            <div class="k">المرشد الأكاديمي</div>
            <div class="v" id="vAdvisor">-</div>
          </div>
        </div>

        <div class="grid">
          <button class="serviceBtn" data-service="الجدول">الجدول</button>
          <button class="serviceBtn" data-service="الأنشطة">الانشطة</button>
          <button class="serviceBtn" data-service="الأعذار">الأعذار</button>
          <button class="serviceBtn" data-service="البيانات">البيانات</button>
          <button class="serviceBtn" data-service="التواصل">التواصل</button>
          <button class="serviceBtn" data-service="المخالفات">المخالفات</button>
        </div>

        <div class="footerNote" id="noteArea">
          اختر خدمة من القائمة (حالياً مثال — لاحقاً نربط كل زر بصفحته/بياناته).
        </div>
      </div>
    </section>

  </div>

  <script>
    /***********************
     * 1) مصدر البيانات
     * - الآن: بيانات تجريبية محلية
     * - لاحقاً: اربطها بـ API من Google Apps Script أو Firebase
     ************************/
    const LOCAL_DB = {
      "441234567": { name: "أحمد محمد", advisor: "م. خالد القحطاني" },
      "551112223": { name: "سلمان علي", advisor: "أ. ناصر الشهري" }
    };

    // لو عندك API لاحقاً ضع الرابط هنا (واتركه فارغ الآن)
    const API_URL = ""; // مثال: "https://script.google.com/macros/s/XXXXX/exec"

    async function fetchTrainee(id){
      // 1) إذا يوجد API فعلي
      if (API_URL && API_URL.startsWith("http")) {
        const url = API_URL + "?action=trainee&id=" + encodeURIComponent(id);
        const res = await fetch(url, { method:"GET" });
        const data = await res.json();
        if (data && data.ok && data.trainee) return data.trainee; // {name, id, advisor}
        return null;
      }

      // 2) fallback بيانات محلية
      if (LOCAL_DB[id]) {
        return { id, name: LOCAL_DB[id].name, advisor: LOCAL_DB[id].advisor };
      }
      return null;
    }

    /***********************
     * 2) تنقل بين الشاشتين
     ************************/
    const screenLogin = document.getElementById("screenLogin");
    const screenDashboard = document.getElementById("screenDashboard");
    const errBox = document.getElementById("errBox");

    function show(screen){
      screenLogin.classList.remove("active");
      screenDashboard.classList.remove("active");
      screen.classList.add("active");
    }

    function setError(msg, showIt=true){
      errBox.textContent = msg;
      errBox.style.display = showIt ? "block" : "none";
    }

    /***********************
     * 3) عناصر الشاشة
     ************************/
    const traineeId = document.getElementById("traineeId");
    const btnSearch = document.getElementById("btnSearch");
    const btnHome = document.getElementById("btnHome");

    const vName = document.getElementById("vName");
    const vId = document.getElementById("vId");
    const vAdvisor = document.getElementById("vAdvisor");
    const noteArea = document.getElementById("noteArea");

    function renderTrainee(t){
      vName.textContent = t.name || "-";
      vId.textContent = t.id || "-";
      vAdvisor.textContent = t.advisor || "-";
    }

    async function doSearch(){
      const id = (traineeId.value || "").trim();
      setError("", false);

      if (!id || id.length < 6) {
        setError("اكتب رقم تدريبي صحيح.");
        return;
      }

      btnSearch.disabled = true;
      btnSearch.textContent = "جارٍ البحث...";
      try{
        const t = await fetchTrainee(id);
        if (!t) {
          setError("لم يتم العثور على متدرب بهذا الرقم.");
          return;
        }
        // حفظ بسيط للجلسة
        localStorage.setItem("trainee_session", JSON.stringify(t));
        renderTrainee(t);
        show(screenDashboard);
      }catch(e){
        console.error(e);
        setError("تعذر الاتصال بمصدر البيانات.");
      }finally{
        btnSearch.disabled = false;
        btnSearch.textContent = "بحث";
      }
    }

    btnSearch.addEventListener("click", doSearch);
    traineeId.addEventListener("keydown", (e)=>{ if(e.key==="Enter") doSearch(); });

    btnHome.addEventListener("click", ()=>{
      localStorage.removeItem("trainee_session");
      traineeId.value = "";
      setError("", false);
      show(screenLogin);
    });

    // أزرار الخدمات
    document.querySelectorAll(".serviceBtn").forEach(btn=>{
      btn.addEventListener("click", ()=>{
        const service = btn.dataset.service;
        noteArea.textContent = "تم اختيار خدمة: " + service + " (اربطها لاحقاً بصفحة/بيانات).";
      });
    });

    // استرجاع جلسة إن وجدت
    (function boot(){
      const saved = localStorage.getItem("trainee_session");
      if (saved) {
        try{
          const t = JSON.parse(saved);
          if (t && t.id) {
            renderTrainee(t);
            show(screenDashboard);
            return;
          }
        }catch(_){}
      }
      show(screenLogin);
    })();
  </script>
</body>
</html>
